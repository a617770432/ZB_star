<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/game_bg_win">

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/game_lh_win"
        android:textColor="@color/gameWhite"/>
    <TextView
        android:id="@+id/tv_coin_num"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_tit"
        android:textSize="45sp"
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/he"/>
</RelativeLayout>