<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
    >
    <TextView
        android:id="@+id/tv_addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/coin_text"
        tools:text="12-08 4:45"/>
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/order_num"
        android:textColor="@color/textColor"/>

    <TextView
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@id/tv_addtime"
        android:id="@+id/tv_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_order"
        android:textColor="@color/textColor"
        tools:text="134344536666667"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_order"
        android:layout_marginTop="5dp"
        android:background="@color/coin_line"/>

    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_order"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20.5dp"
        android:background="@drawable/bg_coinimg"
        android:padding="15dp"
        android:src="@mipmap/icon_live_gift_zs"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignTop="@id/iv_coin"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_coin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_charge_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            tools:text="充值100钻石"/>

        <TextView
            android:id="@+id/tv_charge_rmb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/global"
            tools:text="￥100.10"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_coin"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="数量：100"
        android:textColor="@color/coin_text"
        android:textSize="13dp"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_coin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/coin_text"
        android:textSize="13dp"
        tools:text="未付款"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_coin"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_free2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_coin_us"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/cancal_order"
            android:textColor="@color/textColor"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/tv_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_coin_us"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/cancal_order"
            android:textColor="@color/textColor"
            android:textSize="13dp"/>


        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_coin_us"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/see_details"
            android:textColor="@color/textColor"
            android:textSize="13dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="10dp"
        android:background="@color/coin_line2"/>

</RelativeLayout>