<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:paddingEnd="9dp"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_tag"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:src="@mipmap/icon_triangle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/round_black_5"
        android:layout_below="@+id/iv_tag"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="写文章"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:drawableStart="@mipmap/icon_write_about"
            android:drawablePadding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#616060"
            />

        <TextView
            android:id="@+id/tv_pic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发图文"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:drawableStart="@mipmap/icon_send_by"
            android:drawablePadding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#616060"
            />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="拍视频"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:drawableStart="@mipmap/icon_shoot_video"
            android:drawablePadding="10dp"
            />

    </LinearLayout>

</RelativeLayout>