<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/icon_authentication_failure" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="认证失败"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:padding="37dp"
            android:text="您的身份信息认证未通过\n请上传清晰的认证图片并仔细核对身份信息"
            android:textColor="#666666"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_authentication_again"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="37dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/layout_login_btn"
            android:gravity="center"
            android:text="重新认证"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证即同意"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播协议"
                android:textColor="#CC33FF"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
