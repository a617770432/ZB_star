<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_round_40dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="12dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每成功邀请1 位用户，下载APP并登录"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="奖励钻石："
                android:textColor="#FFFF00"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_can_get_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tv_1"
                android:text="500"
                android:textColor="#FFFF00"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_can_get_coin"
                android:src="@mipmap/icon_diamond" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_to_task"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/background_yellow_15dp"
            android:gravity="center"
            android:text="前往"
            android:textColor="#7703A1" />
    </RelativeLayout>

</LinearLayout>
