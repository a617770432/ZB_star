<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.NetworkFragment"
    android:orientation="vertical"
    android:background="@drawable/round_white_5_stroke_gray"
    android:gravity="center"
    android:paddingBottom="30dp"
    >

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_no_wifi"
        android:layout_marginTop="37dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前为非 Wi-Fi 状态"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="#333333"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否使用流量观看视频"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#333333"
        android:paddingStart="53dp"
        android:paddingEnd="53dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="暂停播放"
            android:background="@drawable/round_gray_20"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#666666"
            />

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="继续播放"
            android:background="@drawable/round_big_red_12"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            />

    </LinearLayout>


</LinearLayout>